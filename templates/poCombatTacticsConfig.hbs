<form>
  <h2>Combat & Tactics Configuration</h2>
  
  <div class="form-group">
    <label for="enable12SecondRounds">Enable 12-Second Rounds</label>
    <input type="checkbox" name="enable12SecondRounds" {{#if enable12SecondRounds}}checked{{/if}} />
  </div>

  <div class="form-group">
    <label for="advance600EndCombat">Advance 600 Seconds After Combat</label>
    <input type="checkbox" name="advance600EndCombat" {{#if advance600EndCombat}}checked{{/if}} />
  </div>

  <div class="form-group">
    <label for="enableFatigue">Enable Fatigue System</label>
    <input type="checkbox" name="enableFatigue" {{#if enableFatigue}}checked{{/if}} />
  </div>

  <div class="form-group">
    <label for="enableInitiPhases">Enable Initiative Phases</label>
    <input type="checkbox" name="enableInitiPhases" {{#if enableInitiPhases}}checked{{/if}} />
  </div>

  <div class="form-group">
    <label for="criticalHitOption">Critical Hit Option</label>
    <select name="criticalHitOption">
      <option value="none" {{#if (eq criticalHitOption "none")}}selected{{/if}}>None</option>
      <option value="natural20" {{#if (eq criticalHitOption "natural20")}}selected{{/if}}>Natural 20</option>
      <option value="natural20Plus5" {{#if (eq criticalHitOption "natural20Plus5")}}selected{{/if}}>Natural 20+5</option>
      <option value="natural20Reroll" {{#if (eq criticalHitOption "natural20Reroll")}}selected{{/if}}>Natural 20 Reroll</option>
      <option value="natural18Plus5" {{#if (eq criticalHitOption "natural18Plus5")}}selected{{/if}}>Natural 18+5</option>
      <option value="natural18Reroll" {{#if (eq criticalHitOption "natural18Reroll")}}selected{{/if}}>Natural 18 Reroll</option>
    </select>
  </div>

  <div class="form-group">
    <label for="criticalMissOption">Critical Miss Option</label>
    <select name="criticalMissOption">
      <option value="none" {{#if (eq criticalMissOption "none")}}selected{{/if}}>None</option>
      <option value="natural1" {{#if (eq criticalMissOption "natural1")}}selected{{/if}}>Natural 1</option>
      <option value="natural1Minus5" {{#if (eq criticalMissOption "natural1Minus5")}}selected{{/if}}>Natural 1-5</option>
      <option value="natural1Reroll" {{#if (eq criticalMissOption "natural1Reroll")}}selected{{/if}}>Natural 1 Reroll</option>
    </select>
  </div>

  <footer>
    <button type="submit" class="submit-button">Submit</button>
  </footer>
</form>
